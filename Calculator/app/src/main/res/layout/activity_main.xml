<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:textStyle="bold"
        android:textSize="50dp"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/resultbox"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:hint="Result"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textbox1"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:hint="Value 1"
            android:layout_gravity="center"
            android:textSize="30dp"
            />
        <TextView
            android:id="@+id/textbox2"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:hint="Value 2"
            android:textSize="30dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:text="1"
            android:textSize="32dp"
            android:onClick="num1"/>

        <Button
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:text="2"
            android:textSize="32dp"
            android:onClick="num2"/>

        <Button
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            android:onClick="num3"
            android:text="3"
            android:textSize="32dp" />

        <Button
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:text="+"
            android:textSize="32dp"
            android:textStyle="bold"
            android:onClick="add"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="OnClick">

        <Button
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:text="4"
            android:textSize="32dp"
            android:onClick="num4" />
        <Button
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:text="5"
            android:textSize="32dp"
            android:onClick="num5" />

        <Button
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:text="6"
            android:textSize="32dp"
            android:onClick="num6" />

        <Button
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:text="-"
            android:textStyle="bold"
            android:textSize="32dp"
            android:onClick="min" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:text="7"
            android:textSize="32dp"
            android:onClick="num7" />

        <Button
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:text="8"
            android:textSize="32dp"
            android:onClick="num8" />

        <Button
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:text="9"
            android:textSize="32dp"
            android:onClick="num9" />
        <Button
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:text="*"
            android:textStyle="bold"
            android:textSize="32dp"
            android:onClick="mul" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:onClick="num0"
            android:text="0"
            android:textSize="32dp" />

        <Button
            android:layout_width="167dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:onClick="clear"
            android:text="C"
            android:textSize="32dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:onClick="div"
            android:text="/"
            android:textSize="32dp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>