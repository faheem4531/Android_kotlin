<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication12.SignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20sp"
            android:paddingBottom="35sp"
            tools:context=".MainActivity">
            <!--App Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50sp"
                android:gravity="center"
                android:text="Signify"
                android:textSize="40sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="30sp"
                android:gravity="center"
                android:text="Signup Here"
                android:textSize="18sp" />
            <!-- Name -->
            <!--  Email -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:text="E-mail"
                    android:textSize="15sp"
                    android:inputType="textEmailAddress"/>

                <EditText
                    android:id="@+id/mail"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="i.e max@gmail.com"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20sp"
                        android:text="Enter name"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="Max"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
            <!--  Password -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:text="Password"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/pass"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="************"
                    android:inputType="textPassword"
                    android:textSize="15sp" />
            </LinearLayout>
            <!--  Confirm password -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:text="Confirm Pass."
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/confirmPass"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="confirm password"
                    android:inputType="textPassword"
                    android:textSize="15sp" />
            </LinearLayout>
            <!--   Gender -->
            <LinearLayout
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:text="Gender"
                    android:textSize="15sp" />

                <RadioGroup
                    android:layout_width="191dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbMale"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:checked="true"
                        android:text="Male"
                        android:textSize="13sp" />

                    <RadioButton
                        android:id="@+id/rbFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textSize="13sp" />
                </RadioGroup>

            </LinearLayout>
            <!--    Sports -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:text="Sports"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/cbCricket"
                        android:layout_width="90dp"
                        android:layout_height="28dp"
                        android:checked="true"
                        android:text="Cricket"
                        android:textSize="13sp" />

                    <CheckBox
                        android:id="@+id/cbHockey"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:text="Hockey"
                        android:textSize="13sp" />

                </LinearLayout>

                <CheckBox
                    android:id="@+id/cbFootball"
                    android:layout_width="90dp"
                    android:layout_height="28dp"
                    android:text="Football"
                    android:textSize="13sp" />
            </LinearLayout>
            <!--    Date of birth -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:text="Date of birth"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/birth"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:text="set view"
                        android:textSize="15sp" />

                    <Switch
                        android:id="@+id/switchView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:onClick="handleToggle" />
                </LinearLayout>
            </LinearLayout>

            <DatePicker
                android:id="@+id/datePiker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:visibility="gone" />
            <!--    City -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:text="City"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/city"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="Lahore"
                    android:textSize="15sp" />
            </LinearLayout>
            <!--    Country -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:text="Country"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/country"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="Pakistan"
                    android:textSize="15sp" />
            </LinearLayout>
            <!--    Skills -->
            <LinearLayout
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:text="Skills"
                    android:textSize="15sp" />

                <RadioGroup
                    android:layout_width="191dp"
                    android:layout_height="25dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/begin"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10sp"
                        android:checked="true"
                        android:text="Beginner"
                        android:textSize="13sp" />

                    <RadioButton
                        android:id="@+id/advance"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:text="Advance"
                        android:textSize="13sp" />
                </RadioGroup>

            </LinearLayout>
            <!--policy check -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/agrement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25sp"
                    android:layout_marginBottom="15sp"
                    android:text="I accept the terms and Conditions." />

            </LinearLayout>
            <!--    Submit-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25sp"
                    android:onClick="signUpUser"
                    android:text="Sign Up" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="clearData"
                    android:text="Clear" />
            </LinearLayout>

            <!--Show Results -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvOutput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="30sp"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>